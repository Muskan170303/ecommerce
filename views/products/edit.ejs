<% layout('layouts/boilerplate')%>
<%- include('../partials/navbar')%>
<div class=" row">

    <div class="col m-4">
        <form class="row flex-column align-items-center justify-content-between g-3 needs-validation" novalidate action="/products/<%=foundPro._id%>?_method=PATCH" method="POST">
            <div class="col-md-4">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name of the product" required value="<%=foundPro.name%>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4">
                <label for="img" class="form-label">Image URL</label>
                <input type="text" class="form-control" id="id" name="img" placeholder="Image Link" value="<%=foundPro.img%>">
            </div>
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" min="0" class="form-control" id="price" name="price" placeholder="Price of the product" required value="<%=foundPro.price%>">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-md-4">
                <label for="desc" class="form-label">Description</label>
                <textarea type="text" class="form-control" id="desc" name="desc" placeholder="Any extra details"><%=foundPro.desc%></textarea>
            </div>
            <div class="col-md-4">
                <label for="category" class="form-label">Category</label>
                <select class="form-select" id="category" required>
                    <option selected disabled value="">Choose...</option>
                    <option value="1">type1</option>
                    <option value="2">type2</option>
                    <option value="3">type3</option>
                    <option value="4">type4</option>
                </select>
                <div class="invalid-feedback">
                    Please select a valid category.
                </div>
            </div>
            <!-- <div class="col-md-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                    Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback">
                    You must agree before submitting.
                    </div>
                </div>
            </div> -->
            <div class="col-md-1">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>
    </div>

</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll('.needs-validation')

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
        .forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
            }

            form.classList.add('was-validated')
        }, false)
        })
    })()
</script>